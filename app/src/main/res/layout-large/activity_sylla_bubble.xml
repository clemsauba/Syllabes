<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bubble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_syllabubble"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/info"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.05"
            android:background="@drawable/info_black"
            android:contentDescription="@string/descriptionLogo" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.9"
            android:contentDescription="@string/descriptionLogo" />

        <Button
            android:id="@+id/answer"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.05"
            android:background="@drawable/custom_button_cat"
            android:contentDescription="@string/descriptionLogo" />

        <Button
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.05"
            android:background="@drawable/custom_button_return_appli1"
            android:contentDescription="@string/descriptionLogo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_bubble1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bubble_1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bubble2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bubble_7"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_8"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_9"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_10"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_11"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bubble_12"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_bubble"
                android:gravity="center"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/first_bubble_syllabe"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/second_bubble_syllabe"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/third_bubble_syllabe"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/imageTip"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom|right"
            android:contentDescription="@string/descriptionLogo"
            android:src="@drawable/bricoleur" />
    </LinearLayout>

</LinearLayout>