<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_victory_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_victory"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_id_victory"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:contentDescription="@string/descriptionLogo" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" >

        <Button
            android:id="@+id/victory_play_again"
            style=""
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/custom_button_rejouer" />

        <Button
            android:id="@+id/victory_menu"
            style=""
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_button_menu" />
    </RelativeLayout>

</LinearLayout>